{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./apps",
        "./packages",
        "./.agent"
      ]
    },
    "postgres": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "POSTGRES_CONNECTION_STRING=postgresql://postgres:password@host.docker.internal:5432/frapp",
        "mcp/postgres"
      ]
    },
    "aws-docs": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "public.ecr.aws/awslabs-mcp/awslabs/aws-documentation-mcp-server:latest"
      ]
    },
    "browser": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    }
  },
  "globalInstructions": "You are Forge. Before starting, query the 'memory' tool for any established architectural decisions. Read GEMINI.md for project routing."
}
